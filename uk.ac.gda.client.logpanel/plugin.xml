<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Diagnostics"
            id="uk.ac.gda.client.categories.diagnostics">
      </category>
      <view
            category="uk.ac.gda.client.categories.diagnostics"
            class="uk.ac.gda.client.logpanel.view.LogpanelView"
            icon="icons/application_error.png"
            id="uk.ac.gda.client.logpanel.view"
            name="Logpanel">
      </view>
   </extension>
   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="uk.ac.gda.client.logpanel.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="uk.ac.gda.client.logpanel.Perspective"
            icon="icons/application_error.png"
            id="uk.ac.gda.client.logpanel.perspective"
            name="Logging">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="uk.ac.gda.client.logpanel.application"
            name="GDA Logpanel">
         <property
               name="windowImages"
               value="platform:/plugin/uk.ac.gda.client.logpanel/icons/GDAlogos/GDALogo16.png,platform:/plugin/uk.ac.gda.client.logpanel/icons/GDAlogos/GDALogo32.png,platform:/plugin/uk.ac.gda.client.logpanel/icons/GDAlogos/GDALogo48.png,platform:/plugin/uk.ac.gda.client.logpanel/icons/GDAlogos/GDALogo64.png,platform:/plugin/uk.ac.gda.client.logpanel/icons/GDAlogos/GDALogo128.png">
         </property>
         <property
               name="appName"
               value="GDA Logpanel">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:uk.ac.gda.client.logpanel.view">
         <command
               commandId="uk.ac.gda.client.logpanel.commands.clear"
               icon="icons/console_clear.gif"
               style="push"
               tooltip="Clear Log">
         </command>
         <command
               commandId="uk.ac.gda.client.logpanel.commands.scrollLock"
               icon="icons/scroll_lock.gif"
               style="toggle"
               tooltip="Scroll Lock">
         </command>
      </menuContribution>
