      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="uk.ac.gda.client.logpanel.toolbar"
               label="Logpanel">
            <command
                  commandId="uk.ac.gda.client.logpanel.commands.clear"
