<!-- AppleTwo Undulator-->
    <GenericOE>
        <name>Undulator</name>
        <LinearPositioner>
            <name>UndulatorGapPositioner</name>
            <motorName>UndulatorGapMotor</motorName>
            <stepsPerUnit>1</stepsPerUnit>
            <softLimitLow>-10000</softLimitLow>
            <softLimitHigh>10000</softLimitHigh>
        </LinearPositioner>
        <UndulatorPhasePositioner>
            <name>PhasePositioner</name>
            <motorName>UndulatorPhaseMotor</motorName>
            <stepsPerUnit>1</stepsPerUnit>
            <softLimitLow>-10000</softLimitLow>
            <softLimitHigh>10000</softLimitHigh>
        </UndulatorPhasePositioner>
        <SingleAxisLinearDOF>
            <name>UndulatorGap</name>
            <protectionLevel>0</protectionLevel>
            <reportingUnit>mm</reportingUnit>
            <moveableName>UndulatorGapPositioner</moveableName>
        </SingleAxisLinearDOF>
        <UndulatorPhaseDOF>
            <name>UndulatorMutualPhase</name>
            <protectionLevel>0</protectionLevel>
            <reportingUnit>mm</reportingUnit>
            <moveableName>PhasePositioner</moveableName>
            <mode>MUTUAL</mode>
        </UndulatorPhaseDOF>
        <UndulatorPhaseDOF>
            <name>UndulatorOpposingPhase</name>
            <protectionLevel>0</protectionLevel>
            <reportingUnit>mm</reportingUnit>
            <moveableName>PhasePositioner</moveableName>
            <mode>OPPOSING</mode>
        </UndulatorPhaseDOF>
        <UndulatorMoveMediatorDOF>
            <name>UndulatorMediator</name>
            <protectionLevel>0</protectionLevel>
            <reportingUnit>kev</reportingUnit>
            <lookupTable>HarmonicOne.lut</lookupTable>
            <lookupTable>HarmonicTwo.lut</lookupTable>
            <lookupTable>HarmonicThree.lut</lookupTable>
            <moveableName>UndulatorGap</moveableName>
            <moveableName>UndulatorMutualPhase</moveableName>
            <moveableName>UndulatorOpposingPhase</moveableName>
            <mutualPhaseGapPowerMap>
               <name>MutualPhaseGapPowerMap</name>
               <forbiddenZone>-10,10,0.0,35</forbiddenZone>
            </mutualPhaseGapPowerMap>
            <opposingPhaseGapPowerMap>
               <name>OpposingPhaseGapPowerMap</name>
               <forbiddenZone>-10,10,0.0,35</forbiddenZone>
            </opposingPhaseGapPowerMap>
        </UndulatorMoveMediatorDOF>
        <UndulatorHarmonicDOF>
           <name>UndulatorHarmonic</name>
            <protectionLevel>0</protectionLevel>
            <reportingUnit>DIMENSIONLESS</reportingUnit>
            <moveableName>UndulatorMediator</moveableName>
        </UndulatorHarmonicDOF>
        <UndulatorPolarizationDOF>
            <name>UndulatorPolarization</name>
            <protectionLevel>0</protectionLevel>
            <reportingUnit>DEGREE</reportingUnit>
            <moveableName>UndulatorMediator</moveableName>
        </UndulatorPolarizationDOF>
        <UndulatorEnergyDOF>
            <name>UndulatorEnergy</name>
            <protectionLevel>0</protectionLevel>
            <reportingUnit>kev</reportingUnit>
            <moveableName>UndulatorMediator</moveableName>
        </UndulatorEnergyDOF>

    </GenericOE>
    <GenericOE>
        <name>Monochromator</name>
        <LinearPositioner>
            <name>MonoGratingPositioner</name>
            <motorName>MonoGratingMotor</motorName>
            <stepsPerUnit>100000</stepsPerUnit>
            <softLimitLow>-100000</softLimitLow>
            <softLimitHigh>100000</softLimitHigh>
            <homeOffset>0</homeOffset>
        </LinearPositioner>
        <LinearPositioner>
            <name>MonoMirrorPositioner</name>
            <motorName>MonoMirrorMotor</motorName>
            <stepsPerUnit>100000</stepsPerUnit>
            <softLimitLow>-100000</softLimitLow>
            <softLimitHigh>100000</softLimitHigh>
            <homeOffset>0</homeOffset>
        </LinearPositioner>
        <SingleAxisLinearDOF>
            <name>MonoGrating</name>
            <protectionLevel>0</protectionLevel>
            <reportingUnit>mm</reportingUnit>
            <moveableName>MonoGratingPositioner</moveableName>
        </SingleAxisLinearDOF>
        <SingleAxisLinearDOF>
            <name>MonoMirror</name>
            <protectionLevel>0</protectionLevel>
            <reportingUnit>mm</reportingUnit>
            <moveableName>MonoMirrorPositioner</moveableName>
        </SingleAxisLinearDOF>

        <SineDriveAngularDOF>
            <name>MonoGratingAngle</name>
             <protectionLevel>0</protectionLevel>
            <reportingUnit>deg</reportingUnit>
            <moveableName>MonoGrating</moveableName>
            <armLength>0.15</armLength>
            <angleOffset>10</angleOffset>
            <angleUpperLimit>10000</angleUpperLimit>
            <angleLowerLimit>-10000</angleLowerLimit>
        </SineDriveAngularDOF>
        <SineDriveAngularDOF>
            <name>MonoMirrorAngle</name>
            <protectionLevel>0</protectionLevel>
            <reportingUnit>deg</reportingUnit>
            <moveableName>MonoMirror</moveableName>
            <armLength>0.154278</armLength>
            <angleOffset>7</angleOffset>
            <angleUpperLimit>10000</angleUpperLimit>
            <angleLowerLimit>-10000</angleLowerLimit>
        </SineDriveAngularDOF>
        <MirrorAndGratingMonoDOF>
           <name>FixedGrating</name>
           <protectionLevel>0</protectionLevel>
           <reportingUnit>nm</reportingUnit>
           <moveableName>MonoGratingAngle</moveableName>
           <moveableName>MonoMirrorAngle</moveableName>
           <gratingLinesPerMM>1.2E06</gratingLinesPerMM>
           <kFF>2.274</kFF>
           <monoMode>1</monoMode>
        </MirrorAndGratingMonoDOF>
        <MirrorAndGratingMonoDOF>
           <name>FixedMirror</name>
           <protectionLevel>0</protectionLevel>
           <reportingUnit>nm</reportingUnit>
           <moveableName>MonoGratingAngle</moveableName>
           <moveableName>MonoMirrorAngle</moveableName>
           <gratingLinesPerMM>1.2E06</gratingLinesPerMM>
           <kFF>2.274</kFF>
           <monoMode>2</monoMode>
        </MirrorAndGratingMonoDOF>
        <MirrorAndGratingMonoDOF>
           <name>FixedFocus</name>
            <protectionLevel>0</protectionLevel>
           <reportingUnit>nm</reportingUnit>
           <moveableName>MonoGratingAngle</moveableName>
           <moveableName>MonoMirrorAngle</moveableName>
           <gratingLinesPerMM>1.2E06</gratingLinesPerMM>
           <kFF>2.274</kFF>
           <monoMode>0</monoMode>
        </MirrorAndGratingMonoDOF>
    </GenericOE>

   <JythonServer>
      <name>command_server</name>
   </JythonServer>

</ObjectFactory>
