module lookupFileWriter {
module corba {

	typedef sequence<string> stringarray;
/**
 * An Interface for Distributed Header File Writer class
 */

interface CorbaLookupFileWriter : gda::_factory::corba::CorbaFindable
{
   void  setFileName(in string fileName)
      raises (device::corba::CorbaDeviceException);

   void setFileHeader(in stringarray headers)
      raises (device::corba::CorbaDeviceException);

   void write(in stringarray values)
      raises (device::corba::CorbaDeviceException);

   void addToFile(in stringarray values)
      raises (device::corba::CorbaDeviceException);
};

