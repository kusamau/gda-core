#ifndef _BEAM_IDL_
#define _BEAM_IDL_

#include <device.idl>

module gda {
module beamline {
module beam {
module corba {

/**
 *  An interface for a distributed object holding important values which
 *  client and server-side objects need to share.
 */
interface CorbaBeamInfo : _factory::corba::CorbaFindable
{
    void setWavelength(in double value);
    double getWavelength();
    void setEnergy(in double value);
    double getEnergy();
    void setEnergyFromDCM()
      raises (device::corba::CorbaDeviceException);
    boolean isCalibrated();

};

};};};};

#endif
