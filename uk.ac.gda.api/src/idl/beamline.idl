#ifndef _BEAMLINE_IDL_
#define _BEAMLINE_IDL_

#include <device.idl>

module gda {
module beamline {
module corba {

/**
 *  An interface for a distributed object holding important values which
 *  client and server-side objects need to share.
 */
interface CorbaBeamlineInfo : _factory::corba::CorbaFindable
{
    void setDataDir(in string dir);
    string getDataDir();

    void setFilePrefix(in string prefix);
    string getFilePrefix();

    void setFileSuffix(in string suffix);
    string getFileSuffix();

    void setFileExtension(in string ext);
    string getFileExtension();

    long getFileNumber();
    long getNextFileNumber();

    void setProjectName(in string project);
    string getProjectName();

    void setExperimentName(in string experiment);
    string getExperimentName();
      
    void setHeader(in string header);
    string getHeader();

    void setSubHeader(in string subheader);
    string getSubHeader();
};

};};};

#endif
