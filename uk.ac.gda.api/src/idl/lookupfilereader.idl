module gda {
module util {
module lookupFileReader {
module corba {

	typedef sequence<string> stringarray;
	
/**
 * An Interface for Distributed Lookup File Reader class
 */

interface CorbaLookupFileReader : gda::_factory::corba::CorbaFindable
{
   void  setFileName(in string fileName)
      raises (device::corba::CorbaDeviceException);

   stringarray getFileHeader()
      raises (device::corba::CorbaDeviceException);

  string read()
      raises (device::corba::CorbaDeviceException);

   stringarray readLine()
      raises (device::corba::CorbaDeviceException);
};

