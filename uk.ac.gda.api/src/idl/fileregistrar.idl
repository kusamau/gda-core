#ifndef _FILEREGISTRAR_IDL_
#define _FILEREGISTRAR_IDL_

#include <findable.idl>

module gda {
module data {
module fileregistrar {
module corba {

/**
 * An interface for a file registry
 */ 
interface CorbaFileRegistrar : gda::_factory::corba::CorbaFindable
{
   typedef sequence<string> stringArray;
   
   /**
    * Register a file for indexing and archiving etc.
    *
    * @return total number of readout channels
    */
   void registerFile (in string filename);

   /**
    * Register a set of files for indexing and archiving etc.
    *
    * @param array of absolute file names
    */
   void registerFiles (in stringArray filenames);
   
};};};};};

#endif