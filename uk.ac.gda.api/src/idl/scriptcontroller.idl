#include <device.idl>
#include <reconfigurable.idl>

module gda {
module jython {
module scriptcontroller {
module corba {
                                          
/**
 * An interface for a distributed class which drives and observes a script
 *
 */

interface CorbaScriptController : gda::_factory::corba::CorbaFindable, gda::_factory::corba::CorbaReconfigurable
{
   string getCommand()
   	raises (device::corba::CorbaDeviceException);
   
   void setCommand(in string scriptName)
   	raises (device::corba::CorbaDeviceException);
   
   string getParametersName()
   	raises (device::corba::CorbaDeviceException);
   
   void setParametersName(in string parametersName)
   	raises (device::corba::CorbaDeviceException);

   string getImportCommand()
   	raises (device::corba::CorbaDeviceException);
   
   void setImportCommand(in string command)
   	raises (device::corba::CorbaDeviceException);
};
};};};};

