#ifndef _Mar345_IDL_
#define _Mar345_IDL_

#include <device.idl>
#include <detector.idl>

module gda {
module device {
module detector {
module mar345 {
module corba {


/**
 *  An interface for a distributed MAR 345 Detector class
 */
interface CorbaMar345 : device::detector::corba::CorbaDetector
{   
   void appendToKeywordList(in string keywords) raises (device::corba::CorbaDeviceException);
   void clearKeywordList() raises (device::corba::CorbaDeviceException);
   void sendKeywordList() raises (device::corba::CorbaDeviceException);
   void sendKeywords(in string keywords) raises (device::corba::CorbaDeviceException);
   void setMode(in long mode) raises (device::corba::CorbaDeviceException);
   void setDirectory(in string directory) raises (device::corba::CorbaDeviceException);
   void setRootName(in string rootName) raises (device::corba::CorbaDeviceException);
   void setFormat(in string format) raises (device::corba::CorbaDeviceException);
   string getFormat() raises (device::corba::CorbaDeviceException);
   long getMode() raises (device::corba::CorbaDeviceException);
   string getDirectory() raises (device::corba::CorbaDeviceException);
   string getRootName() raises (device::corba::CorbaDeviceException);
   void erase() raises (device::corba::CorbaDeviceException);
   void scan() raises (device::corba::CorbaDeviceException);  
};

};};};};};

#endif
